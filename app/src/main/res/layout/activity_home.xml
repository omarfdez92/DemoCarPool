<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

    <include
            layout="@layout/top_info"
            android:layout_width="match_parent"
            android:layout_height="100dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/include"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:id="@+id/carpoolBtn" android:background="@drawable/car"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/include" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
            android:fontFamily="@font/montserrat" android:textColor="#6EA663" android:textStyle="bold"
            android:textSize="24sp" android:textIsSelectable="false" android:onClick="carpoolSelected"/>
        <TextView
                android:text="Carpool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                app:layout_constraintTop_toTopOf="@+id/carpoolBtn"
                app:layout_constraintStart_toStartOf="@+id/carpoolBtn"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginTop="16dp"
                android:textColor="#6EA663" android:textSize="30sp" android:fontFamily="@font/montserrat_bold"
                tools:visibility="visible" android:translationZ="5dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:id="@+id/tataBusBtn" android:background="@drawable/bus"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/carpoolBtn" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
            android:fontFamily="@font/montserrat" android:textColor="#6EA663" android:textStyle="bold"
            android:textSize="24sp" android:textIsSelectable="false" android:onClick="tataBusSelected"/>
        <TextView
                android:text="Tata Bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/tataBusBtn"
                app:layout_constraintStart_toStartOf="@+id/tataBusBtn"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginTop="16dp"
                android:textColor="#6EA663" android:textSize="30sp" android:fontFamily="@font/montserrat_bold"
                tools:visibility="visible" android:translationZ="5dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:id="@+id/riderBtn" android:background="@drawable/parkin"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tataBusBtn" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
            android:fontFamily="@font/montserrat" android:textColor="#6EA663" android:textStyle="bold"
            android:textSize="24sp" android:textIsSelectable="false" android:onClick="parkingLotSelected"/>
        <TextView
                android:text="Parking \nLot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                app:layout_constraintTop_toTopOf="@+id/riderBtn"
                app:layout_constraintStart_toStartOf="@+id/riderBtn"
                android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginTop="16dp"
                android:textColor="#6EA663" android:textSize="30sp" android:fontFamily="@font/montserrat_bold"
                tools:visibility="visible" android:translationZ="5dp"/>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/linearLayout2" >

        <Button
                android:text="Home"
                android:layout_width="193dp"
                android:layout_height="match_parent"
                android:id="@+id/homeBtn"
                android:background="#3F51B5" android:textColor="#fff"
                android:textSize="18sp" android:fontFamily="@font/montserrat" android:onClick="goHomeBtn"/>
        <Button
                android:text="Freco Play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/frescoBtn"
                android:background="#3F51B5" android:fontFamily="@font/montserrat" android:textColor="#fff"
                android:textSize="18sp" tools:layout_editor_absoluteX="299dp" android:onClick="goFrescoBtn"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>