<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EmployeeDataActivity">

    <ImageView
            android:layout_width="140dp"
            android:layout_height="250dp"
            android:id="@+id/employeeImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp" android:scaleType="centerCrop"
            app:srcCompat="@drawable/avatartwo" android:layout_marginTop="132dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/employeeName"
            app:layout_constraintTop_toTopOf="@+id/employeeImage"
            app:layout_constraintStart_toEndOf="@+id/employeeImage" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" tools:text="Francisco Parra"
            android:textSize="24sp" android:textColor="#000" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/employeeField" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/employeeName" tools:text="Cardiologia"
             android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/employeeName" android:textColor="#000"/>
    <TextView
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:id="@+id/textView5" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/employeeField"
            app:layout_constraintStart_toStartOf="@+id/employeeField"
            android:text="Carpooling (also car-sharing, ride-sharing and lift-sharing) is the sharing of car journeys so that more than one person travels in a car, and prevents the need for others to have to drive to a location themselves."
            android:textColor="#000" android:textSize="16sp"/>
    <Button
            android:text="ACCEPT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/acceptBtn"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#fff" android:textStyle="bold"
            android:textSize="18sp" android:background="@android:color/holo_blue_dark"
            android:onClick="acceptBtnClick"/>

</android.support.constraint.ConstraintLayout>